;
; cabwiz.ddf
;
; Template directive file to create the CAB file
; ----------------------------------------------

.Set Cabinet=ON
.Set Compress=OFF
.Set CabinetFileCountThreshold=150    ; no files per cabinet threshold
.Set FolderFileCountThreshold=150     ; no files per folder threshold
.Set FolderSizeThreshold=0          ; no folder size threshold
.Set MaxCabinetSize=0               ; no max size for the cabinet
.Set MaxDiskFileCount=150
.Set MaxDiskSize=0
.Set ReservePerCabinetSize=0        ; for web signing
.Set ReservePerDataBlockSize=0
.Set ReservePerFolderSize=100
.Set UniqueFiles=ON

.Set DiskDirectory1=.
.Set DiskLabel1=Setup

